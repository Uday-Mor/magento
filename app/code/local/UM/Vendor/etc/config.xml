<config>
    <modules>
        <UM_Vendor>    
            <version>1.0.0</version>
        </UM_Vendor>
    </modules>
    <frontend>
        <layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <vendor>
                <class>UM_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <vendor_resource>
                <class>UM_Vendor_Model_Resource</class>
                <deprecatedNode>vendor_mysql4</deprecatedNode>
                <entities>
                    <vendor>
                        <table>vendor</table>
                    </vendor>
                    <vendor_address>
                        <table>vendor_address</table>
                    </vendor_address>
                </entities>
            </vendor_resource>
        </models>
        <resources>
            <vendor_setup>
                <setup>
                    <module>UM_Vendor</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </vendor_setup>
            <vendor_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </vendor_write>
            <vendor_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </vendor_read>
        </resources>
        <blocks>
            <vendor>
                <class>UM_Vendor_Block</class>
            </vendor>
        </blocks>
        <helpers>
           <vendor>
                  <class>UM_vendor_Helper</class>
            </vendor>
        </helpers>
        <template>
            <email>
                <vendor_welcome_email_template module="vendor">
                    <label>Welcome Email Template</label>
                    <file>vendor-new-send.html</file>
                    <type>html</type>
                </vendor_welcome_email_template>
                <vendor_verification_email_template module="vendor">
                    <label>Confirmation Email Template</label>
                    <file>vendor_account_confirmation.html</file>
                    <type>html</type>
                </vendor_verification_email_template>
            </email>
        </template>
    </global>
    <admin>
        <routers>
            <Vendor>
                <use>admin</use>
                <args>
                    <module>UM_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </Vendor>
        </routers>
    </admin>
</config>
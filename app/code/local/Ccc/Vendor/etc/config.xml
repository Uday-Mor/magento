<?xml version="1.0"?>
<config>
    <modules>
        <Ccc_Vendor>
            <version>1.0.0.0</version>
        </Ccc_Vendor>
    </modules>
    <global>
        <models>
            <vendor>
                <class>Ccc_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <vendor_resource>
                <class>Ccc_Vendor_Model_Resource</class>
                <entities>
                    <vendor>
                        <table>vendor</table>
                    </vendor>
                    <address>
                        <table>vendor_address</table>
                    </address>
                </entities>
            </vendor_resource>
        </models>
        <blocks>
            <vendor>
                <class>Ccc_Vendor_Block</class>
            </vendor>
        </blocks>
        <helpers>
            <vendor>
                <class>Ccc_Vendor_Helper</class>
            </vendor>
            <address>
                <class>Ccc_Vendor_Helper_Address</class>
            </address>
        </helpers>
    </global>
    <admin>
        <routers>
            <vendor>
                <use>admin</use>
                <args>
                    <module>Ccc_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </vendor>
        </routers>
    </admin>
</config>

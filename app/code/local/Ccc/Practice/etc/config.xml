<?xml version="1.0"?>
<config>
    <modules>
        <Ccc_Practice>
            <version>0.1.0</version>
        </Ccc_Practice>
    </modules>
    <frontend>
        <layout>
            <updates>
                <practice module="Ccc_Practice">
                    <file>Ccc_Practice.xml</file>
                </practice>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <practice>
                <class>Ccc_Practice_Model</class>
                <resourceModel>Practice_resource</resourceModel>
            </practice>
            <practice_resource>
                <class>Ccc_Practice_Model_Resource</class>
                <entities>
                    <practice>
                        <table>practice</table>
                    </practice>
                </entities>
            </practice_resource>
        </models>
        <helpers>
            <practice>
                <class>Ccc_Practice_Helper</class>
            </practice>
        </helpers>
    </global>
    <admin>
        <routers>
            <practice>
                <use>admin</use>
                <args>
                    <module>Ccc_Practice</module>
                    <frontName>Practice</frontName>
                </args>
            </practice>
        </routers>
    </admin>
</config>